<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
			
			<div class="container">
				<%= link_to "Treebook", root_path, :class => "brand" %>
				<ul class="nav">
					<% if user_signed_in? %>
					<li><%= link_to current_user.full_name, profile_path(current_user) %></li>
					<li><%= link_to 'Friends', user_friendships_path %></li>
					<li><%= link_to "Feed", feed_path %></li>
					<li><%= link_to "New Status", new_status_path %></li>
					<% end %>					
				</ul>
				<ul class="nav pull-right">
					<% if user_signed_in? %>
						<li><%= link_to "Settings", edit_user_registration_path %></li>
						<li><%= link_to "Log Out", logout_path %></li>
					<% else %>
						<li><%= link_to "Sign Up", register_path %></li>
						<li><%= link_to "Log In", login_path %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
	<div class="container">
		<% flash.each do |type, message| %>
			<div class="alert <%= flash_class type %>">
				<button class="close" data-dismiss="alert">x</button>
				<%= message %>
			</div>
		<% end %>

		<%= yield %>
	</div>
	
	<footer class="footer">
		<div class="container">
			<ul class="footer-links">
				<p><br />I am a footer.</p>
				<p>I have a few things to say.</p>
				<li class="muted"><%= link_to 'Friends', user_friendships_path %> | <%= link_to 'Friends', user_friendships_path %> | <%= link_to 'Friends', user_friendships_path %></li>
			</ul>
		</div>
	</footer>
</body>
</html>
