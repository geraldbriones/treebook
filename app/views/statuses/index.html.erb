<div class="page-header">
	<h1>Feed</h1>
</div>

<% @statuses.each do |status| %>
<div class="span1" style="padding: 10px 10px 0 0;"><%= link_to image_tag(status.user.gravatar_url), profile_path(status.user) %></div>
<div class="status">
	<strong><%= link_to status.user.full_name, profile_path(status.user) %></strong>
	<p><%= status.content %></p>
	<div class="meta">
		<%= link_to time_ago_in_words(status.created_at) + " ago", status %>
		<% if status.user ==current_user%>
		<span class="admin">
			| <%= link_to 'Edit', edit_status_path(status) %> |
			<%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure you want to delete this status?'} %>
		</span>
		<% end %>
	</div>
</div>
<% end %>